<div class="header">
  <h1><%=@profile.email%> </h1>
  <img src="#" alt="This is <%=@profile.email%>'s profile picture!">
  <h2>This is the user's bio!</h2>
</div>
<div class="main-content">
  <%if @profile.id === current_user.id then%>
    <div id="settings">
      <%=link_to "Settings", edit_user_password_path%>
      <%=link_to "Requests", profile_request_path(@profile)%>
    </div>
  <%else%>
    <div id="request">
      <% if !@request_exists%>
        <%=button_to "Add friend", profile_request_index_path(profile_id: @profile.id), method: :post%>
      <%end%>
      <% if @request_exists && !@already_friends%>
        <%=button_to "Pending"%>
      <%end%>
      <% if @already_friends%>
        <%=button_to "Remove friend", friend_path(friend_data: @profile), method: :delete%>
      <%end%>
    </div>
    <%=render "chat_button"%>
  <%end%>
</div>