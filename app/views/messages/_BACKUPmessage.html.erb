<%@chat = Chat.first%>
<h1>New Messages partial!</h1>
<%if @chat.second_user%>
  <div>HELLO!</div>
<%end%>
<%if @chat.messages then %>
  <%@chat.messages.order(created_at: :asc).each do |message| %>
    <div class="user-time-box" style="display:flex">
      <div class="message-user"> <%="#{message.user.email}"%></div>
      <div class="message-time"> <%="|  #{time_ago_in_words((message.created_at))} ago"%></div>
    </div>
    <div class="message"> <%=message.message%></div>
    <%if message.chat_images.attached?%>
      <div class='message_image'><%= image_tag message.chat_images.variant(:resize_attachment)%></div>
    <%end%>
    <br />
  <%end%>
<%else%>
  <div class="message"> Send a message!</div>
<%end%>
<h1>EONew Messages partial!</h1>
